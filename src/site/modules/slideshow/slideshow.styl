.slideshow
  .slide 
    position relative
    width 100%
    img
      display block
      max-width 100%
  .text
    position absolute
    bottom 0
    left 0
    width 100%
    height 100%
    padding gutter
    background imagetextbackground
    color white
    big 
      fontsize("m")
  
  .flickity-prev-next-button, .flickity-page-dots
    opacity 0
    transition opacity 300ms linear
  
  &:hover 
    .flickity-prev-next-button, .flickity-page-dots
      opacity 1
      &[disabled]
        opacity .3
        
  .flickity-page-dots
    bottom 1rem
    .dot
      background-color ci_grey
      opacity 1
    .is-selected
      background-color white
      
+bp(large)
  .slideshow
    .text
      bottom gutter
      width auto
      height auto
      
      big
        fontsize("l")
        weight(bold)