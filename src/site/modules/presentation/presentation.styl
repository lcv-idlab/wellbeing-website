.presentation
  contentspacing(1)
  background presentationbackground
  
  *
    color presentationcolor

  .people
    lost-utility clearfix
    
    .person 
      text-align center
      margin-bottom 2em
      
    .img
      width 80%
      left 10%
      position relative
      padding-bottom 80%
      border-radius 50%
      overflow hidden
      background personimagebackground
      margin-bottom .5em
      
      img
        position absolute
        display block
        width 100%
        height 100%
        top 0 
        left 0
        
    .name 
      white-space nowrap
      margin-bottom .5em
      weight(bold)
    
    .position
      font-style italic
      
    .name, .position, .org
      fontsize("s")

+bp(small)
  .presentation
    .people
      lost-utility clearfix
      .person 
        lost-column 1/2 2 2rem

+bp(medium)
  .presentation
    .organizations
      lost-utility clearfix
      .org 
        lost-column 1/2 2
    
    .people
      .person 
        lost-column 1/4 4 2rem
        

+bp(large)
  .presentation
    contentspacing(3)
    