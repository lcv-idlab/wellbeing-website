nav
  weight(bold)
  contentspacing()
  top 0
  position fixed
  z-index 2
  width maxwidth
  background-color #fff
  max-width 100%
  height remify(headerheight)
  display flex
  justify-content space-between
  
  .mobilemenu 
    position absolute
    top -100vh
    left 0
    width 100%
    height 100vh
    background-color rgba(0,0,0,0.8)
    z-index 2
    display flex
    justify-content center
    align-items center
    flex-direction column
    a
      color white
      text-decoration none
      margin-bottom 1em
      fontsize(l)

      &.active
        color menucoloractive

  .hamburger 
    border 0 
    display flex
    background-color transparent
    justify-content center
    align-items center
    margin-left auto
    width remify(headerheight)
    position relative
    z-index 3

    span 
      display none
    
    svg
      height 3rem
      width 3rem
      
  .text
    display none
  
  .logo
    flex-basis 40%
    
    img
      max-height remify(headerheight)

    .large
      display none
      
    +bp(large)
      .large
        display block
      .small 
        display none
        
+bp(large)
  nav 
    .text
      display block
      flex-basis 60%
      position relative
  
    .hamburger 
      display none

    .pages, .anchors
      bottom remify(logobaseline)
      transform-origin center center 50px
      transition transform 300ms ease-out
      display flex
      align-items flex-end
      justify-content space-between
      position absolute
      width 100%
      
    .pages
      transform rotateX(0deg)
      
    .anchors
      transform rotateX(-90deg)
      color ci_grey
      
    a
      color menucolor 
      text-decoration none
      white-space nowrap

      &.active 
        color menucoloractive
      &:last-child
        margin-right 0
    
    &.scrolled
      .pages 
        transform rotateX(90deg)      
      .anchors
        transform rotateX(0deg)